@model CapaDatos.Database.Cursos

@{
    ViewBag.Title = "Eliminar Curso";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Title
            </h3>
        </div>

        <div class="card-body">
            <h4 class="text-danger mb-4">¿Está seguro que desea eliminar este curso?</h4>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.Descripcion):</label>
                        <p>@Html.DisplayFor(model => model.Descripcion)</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.Seccion):</label>
                        <p>@Html.DisplayFor(model => model.Seccion)</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.FechaInicio):</label>
                        <p>@Html.DisplayFor(model => model.FechaInicio)</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.FechaFin):</label>
                        <p>@Html.DisplayFor(model => model.FechaFin)</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.Estado):</label>
                        <p>@Html.DisplayFor(model => model.Estado)</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Profesor:</label>
                        <p>@Html.DisplayFor(model => model.Usuarios.Nombre)</p>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-between mt-4">
                    @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-outline-secondary" })
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i> Confirmar Eliminación
                    </button>
                </div>
            }
        </div>
    </div>
</div>