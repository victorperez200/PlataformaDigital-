@model PlataformaDigital.Models.Curso

@{
    ViewBag.Title = "Crear curso";
}

<div class="max-w-2xl mx-auto px-4 py-10">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">📝 Crear nuevo curso</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="space-y-6">
            <div>
                <label class="block font-medium text-gray-700">Nombre</label>
                @Html.TextBoxFor(m => m.Nombre, new { @class = "w-full mt-1 p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none" })
                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-red-500 text-sm" })
            </div>

            <div>
                <label class="block font-medium text-gray-700">Descripción</label>
                @Html.TextAreaFor(m => m.Descripcion, new { rows = 4, @class = "w-full mt-1 p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none" })
                @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-red-500 text-sm" })
            </div>

            <div>
                <label class="block font-medium text-gray-700">Categoría</label>
                @Html.TextBoxFor(m => m.Categoria, new { @class = "w-full mt-1 p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none" })
                @Html.ValidationMessageFor(m => m.Categoria, "", new { @class = "text-red-500 text-sm" })
            </div>

            <div>
                <label class="block font-medium text-gray-700">Fecha de inicio</label>
                @Html.TextBoxFor(m => m.FechaInicio, "{0:yyyy-MM-dd}", new { type = "date", @class = "w-full mt-1 p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none" })
                @Html.ValidationMessageFor(m => m.FechaInicio, "", new { @class = "text-red-500 text-sm" })
            </div>

            <div class="flex justify-between">
                <a href="@Url.Action("Index")" class="text-gray-600 hover:underline">← Volver</a>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg">
                    Guardar
                </button>
            </div>
        </div>
    }
</div>
