@model CapaDatos.Database.Cursos

@{
    ViewBag.Title = "Nuevo Curso";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
                <i class="fas fa-plus-circle me-2"></i>@ViewBag.Title
            </h3>
        </div>

        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Seccion, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Seccion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Seccion, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.ProfesorId, "Profesor", htmlAttributes: new { @class = "form-label" })
                            @Html.DropDownList("ProfesorId", null, "-- Seleccione Profesor --", new { @class = "form-select" })
                            @Html.ValidationMessageFor(model => model.ProfesorId, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            @Html.LabelFor(model => model.FechaInicio, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.FechaInicio, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.FechaFin, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.FechaFin, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3 form-check">
                            @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-check-input" } })
                            @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "form-check-label" })
                            @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-outline-secondary" })
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Crear Curso
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
