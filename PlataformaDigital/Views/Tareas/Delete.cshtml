@model CapaDatos.Database.Tareas

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-trash-alt me-2"></i> Confirmar Eliminación
            </h3>
        </div>

        <div class="card-body">
            <h4 class="text-danger mb-4">¿Estás seguro que deseas eliminar esta tarea?</h4>

            <div class="row">
                <!-- Primera columna -->
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Nombre):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Descripcion):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
                    </dl>
                </div>

                <!-- Segunda columna -->
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.FechaCreacion):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaCreacion)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.FechaVencimiento):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaVencimiento)</dd>

                        <dt class="col-sm-4 fw-bold">Curso:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Cursos.Descripcion)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-between">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary" })
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Confirmar Eliminación
                    </button>
                </div>
            }
        </div>
    </div>
</div>


    