@model IEnumerable<CapaDatos.Database.Tareas>

@{
    ViewBag.Title = "Gestión de Tareas";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-tasks me-2"></i>@ViewBag.Title
                </h3>
                @Html.ActionLink("Nueva Tarea", "Create", null, new { @class = "btn btn-light btn-sm" })
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Tarea</th>
                            <th>Descripción</th>
                            <th>Creación</th>
                            <th>Vencimiento</th>
                            <th>Curso</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                                <td>@Html.DisplayFor(modelItem => item.FechaVencimiento)</td>
                                <td>@Html.DisplayFor(modelItem => item.Cursos.Descripcion)</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-primary" })
                                        @Html.ActionLink("Ver", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info" })
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="text-muted small">
                <i class="fas fa-list-check me-1"></i> Total tareas: @Model.Count()
            </div>
        </div>
    </div>
</div>