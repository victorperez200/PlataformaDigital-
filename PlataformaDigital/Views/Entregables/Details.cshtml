@model CapaDatos.Database.Entregables

@{
    ViewBag.Title = "Detalles del Entregable";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-file-alt me-2"></i>@ViewBag.Title
                </h3>
                @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-light btn-sm" })
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="fw-bold">Documento:</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.NombreDocumento)</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Extensión:</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Extension)</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Fecha de Creación:</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.FechaCreacion)</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="fw-bold">Matrícula:</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Estudiantes.Matricula)</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Tarea:</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Tareas.Nombre)</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-outline-secondary" })
        </div>
    </div>
</div>
