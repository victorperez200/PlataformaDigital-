@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-md mx-auto mt-20 p-8 bg-white shadow-lg rounded-xl">
    <h2 class="text-2xl font-bold mb-6 text-center">🔐 Iniciar sesión</h2>

    @if (ViewBag.Error != null)
    {
        <div class="bg-red-100 text-red-600 p-3 rounded mb-4">@ViewBag.Error</div>
    }

    @using (Html.BeginForm())
    {
        <div class="space-y-4">
            <div>
                <label class="block font-medium">Usuario</label>
                <input name="nombreUsuario" class="form-input w-full" />
            </div>

            <div>
                <label class="block font-medium">Contraseña</label>
                <input type="password" name="contraseña" class="form-input w-full" />
            </div>

            <button type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded">
                Ingresar
            </button>
        </div>
    }
</div>
