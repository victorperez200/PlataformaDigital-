<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Plataforma Educativa</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-800">

    <!-- Navbar -->
    <nav class="bg-white shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
            @if (Request.IsAuthenticated)
            {
                <span class="text-gray-700 font-semibold">Hola, @User.Identity.Name</span>

                if (Session["Rol"] != null && Session["Rol"].ToString() == "Profesor")
                {
                    <a href="@Url.Action("Index", "Profesor")" class="ml-4 text-blue-700 hover:underline">Panel del Profesor</a>
                }
            }
            else
            {
                <a href="@Url.Action("Login", "Auth")"
                   class="text-blue-700 hover:underline font-semibold">Iniciar sesión</a>
            }
            <a href="@Url.Action("Index", "Home")" class="text-xl font-bold text-blue-600">🎓 Plataforma</a>
            <div class="space-x-4">
                <a href="@Url.Action("Index", "Home")" class="text-gray-700 hover:text-blue-600 font-medium">Inicio</a>
                <a href="@Url.Action("Index", "Cursos")" class="text-gray-700 hover:text-blue-600 font-medium">Cursos</a>
                <a href="#" class="text-gray-700 hover:text-blue-600 font-medium">Perfil</a>
                <a href="@Url.Action("Logout", "Auth")"
                   class="ml-4 text-red-600 hover:underline">Cerrar sesión</a>
            </div>
        </div>
    </nav>

    <!-- Contenido -->
    <main class="min-h-screen">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white shadow-inner mt-10">
        <div class="max-w-7xl mx-auto px-4 py-6 text-center text-sm text-gray-500">
            &copy; @DateTime.Now.Year - Plataforma Educativa. Todos los derechos reservados.
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>

