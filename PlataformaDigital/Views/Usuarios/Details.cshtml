@model CapaDatos.Database.Usuarios

@{
    ViewBag.Title = "Detalles del Usuario";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-user-circle me-2"></i>@ViewBag.Title
                </h3>
                @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-light btn-sm" })
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.Nombre):</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Nombre)</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.Apellido):</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Apellido)</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.Email):</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Email)</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.FechaRegistro):</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.FechaRegistro)</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.TipoUsuarios.Nombre):</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.TipoUsuarios.Nombre)</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.Estudiantes.Matricula):</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Estudiantes.Matricula)</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">@Html.DisplayNameFor(model => model.Activo):</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Activo)</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-outline-secondary" })
        </div>
    </div>
</div>